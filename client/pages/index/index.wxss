/**index.wxss**/

.newsList {
  display: flex;
  flex-direction: column;
  align-items: left;
  width: 100%;
  justify-content: center;
}

.child-row {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 137.5rpx;
  padding-left: 12rpx;
  padding-right: 4rpx;
  align-items: center;
  border-style: solid;
  border-width: 1px;
  border-color: #d7d7d9;
  border-top: 0;
  border-left: 0;
  border-right: 0;
  padding-bottom: 0rpx;
}

.child-row-mid {
  display: flex;
  flex-direction: column;
  width: 360rpx;
  justify-content: center;
  padding-left: 24rpx;
}

.child-row-mid-text-1 {
  font-size: 37.5rpx;
}

.child-row-mid-text-2 {
  font-size: 40rpx;
  width: 170rpx;
  text-align: right;
}

.child-row-mid-text-3 {
  font-size: 27.5rpx;
  padding-left: 10rpx;
  text-align: right;
}

.child-row-date {
  text-align: left;
  font-size: 22.5rpx;
  padding-top: 5rpx;
  width: 160rpx;
}

.child-row-icon {
  width: 87.5rpx;
  height: 87.5rpx;
}

.round-click {
  height: 125rpx;
  width: 125rpx;
  background-color: #4555ff;
  border-radius: 100%;
  position: fixed;
  bottom: 50rpx;
  right: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
}

.round-click navigator {
  font-size: 32rpx;
  max-width: 80rpx;
  color: #fff;
  text-align: center;
}

.empty-content {
  position: fixed;
  top: 150rpx;
  left: 250rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
}

